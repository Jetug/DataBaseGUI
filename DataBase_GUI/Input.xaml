<UserControl x:Class="DataBase_GUI.Input"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DataBase_GUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" Width="502.196">
    <Grid>
        <ListView x:Name="testView" Height="241" Margin="74,139,81,0" VerticalAlignment="Top">
            <ListView.View>
                <GridView>
                    <GridViewColumn
                        Header="Название"
                        DisplayMemberBinding="{Binding Path = name}"
                        />
                    <GridViewColumn
                        Header="Девелопер"
                        DisplayMemberBinding="{Binding Path = dev}"
                        />
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</UserControl>
